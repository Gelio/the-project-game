{
  "$id": "https://github.com/Gelio/the-project-game",
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "title": "ActionValid",
  "description": "Sent from GM to Player when requested action is valid",

  "definitions": {
    "playerId": {
      "type": "string"
    }
  },

  "properties": {
    "type": {
      "enum": ["ACTION_VALID"]
    },
    "senderId": {
      "enum": ["GAME_MASTER"]
    },
    "recipientId": {
      "$ref": "#/definitions/playerId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "delay": {
          "type": "integer"
        }
      },
      "required": ["delay"]
    }
  },
  "required": ["type", "senderId", "recipientId", "payload"]
}
