{
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "title": "PlayerRejected",
  "description":
    "Sent when cannot accept player due to maximum number of players in a team or leader already connected",

  "properties": {
    "type": {
      "type": "string",
      "enum": ["PLAYER_REJECTED"]
    },
    "senderId": {
      "enum": ["GAME_MASTER"]
    },
    "recipientId": {
      "$ref": "player-id.json#/definitions/playerId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "reason": {
          "type": "string"
        }
      },
      "required": ["reason"]
    }
  },
  "required": ["type", "senderId", "recipientId", "payload"]
}
