{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",

  "definitions": {
    "piece": {
      "type": "object",
      "properties": {
        "isSham": {
          "type": "boolean",
          "wasTested": "boolean"
        }
      },
      "minProperties": 2
    },
    "tile": {
      "type": "object",
      "properties": {
        "distanceToPiece": {
          "type": "integer",
          "minimum": -1
        },
        "hasCompletedGoal": {
          "type": "boolean"
        },
        "piece": {
          "oneOf": [{ "type": "null" }, { "$ref": "#/definitions/piece" }]
        },
        "playerId": {
          "oneOf": [{ "type": "null" }, { "$ref": "entity-ids.json#/definitions/playerId" }]
        },
        "timestamp": {
          "type": "integer"
        }
      },
      "minProperties": 5
    }
  },

  "properties": {
    "type": {
      "const": "COMMUNICATION_RESPONSE"
    },
    "senderId": {
      "$ref": "entity-ids.json#/definitions/playerId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "targetPlayerId": {
          "$ref": "entity-ids.json#/definitions/playerId"
        },
        "accepted": {
          "const": true
        },
        "board": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tile"
          },
          "minItems": 1
        }
      },
      "minProperties": 3
    }
  },
  "minProperties": 3
}
