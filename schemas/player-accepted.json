{
  "$id": "https://github.com/Gelio/the-project-game",
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "title": "PlayerAccepted",
  "description": "Sent when player was successfully connected to game",

  "definitions": {
    "playerId": {
      "type": "string"
    }
  },

  "properties": {
    "type": {
      "type": "string",
      "enum": ["PLAYER_ACCEPTED"]
    },
    "senderId": {
      "enum": ["GAME_MASTER"]
    },
    "recipientId": {
      "$ref": "#/definitions/playerId"
    }
  },
  "required": ["type", "senderId", "recipientId"]
}
