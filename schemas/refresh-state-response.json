{
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "title": "RefreshStateResponse",

  "definitions": {
    "playerPosition": {
      "type": "object",
      "properties": {
        "playerId": {
          "$ref": "common/entity-ids.json#/definitions/playerId"
        },
        "x": {
          "type": "integer"
        },
        "y": {
          "type": "integer"
        }
      },
      "required": ["playerId", "x", "y"]
    }
  },

  "properties": {
    "type": {
      "const": "ACTION_VALID"
    },
    "senderId": {
      "$ref": "common/entity-ids.json#/definitions/gameMasterId"
    },
    "recipientId": {
      "$ref": "common/entity-ids.json#/definitions/playerId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "integer"
        },
        "currentPositionDistanceToClosestPiece": {
          "type": "integer"
        },
        "playerPositions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/playerPosition"
          }
        },
        "team1Score": {
          "type": "integer"
        },
        "team2Score": {
          "type": "integer"
        }
      },
      "required": [
        "timestamp",
        "currentPositionDistanceToClosestPiece",
        "playerPositions",
        "team1Score",
        "team2Score"
      ]
    }
  },
  "required": ["type", "senderId", "recipientId", "payload"]
}
